{
    "name": "victor-and-petar/university-course-manager",
    "description": "A simple university course manager application using PHP, MySQL, and Docker Compose.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Uzunov",
            "email": "uzunovvictor@gmail.com"
        },
        {
            "name": "Petar Kirilov",
            "email": "petar.kirilov17@gmail.com"
        }
